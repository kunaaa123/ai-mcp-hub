# ─── Server ─────────────────────────────────────────────────
PORT=4000
NODE_ENV=development

# ─── Production Safe Mode ────────────────────────────────────
# Set to "true" to block destructive operations (migrations, git push, etc.)
PRODUCTION_SAFE_MODE=false

# ─── MySQL Database ──────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=mcp_hub

# ─── Redis ───────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ─── Ollama ──────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TEMPERATURE=0.1
OLLAMA_CONTEXT_LENGTH=32768
OLLAMA_TIMEOUT=120000

# ─── File System ─────────────────────────────────────────────
# Restrict AI file access to this path
FS_ALLOWED_PATH=./workspace
