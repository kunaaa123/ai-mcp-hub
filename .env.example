# ─── Server ─────────────────────────────────────────────────
PORT=4000
NODE_ENV=development

# ─── Production Safe Mode ────────────────────────────────────
# Set to "true" to block destructive operations (migrations, git push, etc.)
PRODUCTION_SAFE_MODE=false

# ─── MySQL Database ──────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=mcp_hub

# ─── Redis ───────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ─── Ollama ──────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
# Faster models: llama3.2:3b (fastest), qwen2.5:3b, phi3.5 | Default: llama3.1 (slowest)
OLLAMA_MODEL=llama3.1
OLLAMA_TEMPERATURE=0.1
# Lower = faster. 4096 handles most tasks. Use 8192 only if AI loses context.
OLLAMA_CONTEXT_LENGTH=4096
OLLAMA_TIMEOUT=60000

# ─── File System ─────────────────────────────────────────────
# Restrict AI file access to this path
FS_ALLOWED_PATH=./workspace
