[
  {
    "_comment": "=== FILE TOOLS ===",
    "id": "filesystem",
    "name": "Filesystem Server",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-filesystem", "C:/path/to/allowed/dir"],
    "env": {},
    "enabled": false
  },

  {
    "_comment": "=== WEB / SEARCH TOOLS ===",
    "id": "brave-search",
    "name": "Brave Search",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-brave-search"],
    "env": {
      "BRAVE_API_KEY": "your_brave_api_key_here"
    },
    "enabled": false
  },

  {
    "id": "fetch",
    "name": "Web Fetch (ดึงเนื้อหาเว็บ)",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-fetch"],
    "env": {},
    "enabled": false
  },

  {
    "_comment": "=== CODE / DEV TOOLS ===",
    "id": "github",
    "name": "GitHub Server",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-github"],
    "env": {
      "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token_here"
    },
    "enabled": false
  },

  {
    "_comment": "=== DATABASE TOOLS ===",
    "id": "postgres",
    "name": "PostgreSQL",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-postgres", "postgresql://user:password@localhost:5432/mydb"],
    "env": {},
    "enabled": false
  },

  {
    "id": "sqlite",
    "name": "SQLite",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-sqlite", "--db-path", "C:/path/to/database.db"],
    "env": {},
    "enabled": false
  },

  {
    "id": "mysql",
    "name": "MySQL / MariaDB",
    "command": "npx",
    "args": ["-y", "mcp-server-mysql"],
    "env": {
      "MYSQL_HOST": "localhost",
      "MYSQL_PORT": "3306",
      "MYSQL_USER": "root",
      "MYSQL_PASSWORD": "your_password_here",
      "MYSQL_DATABASE": "mydb"
    },
    "enabled": false
  },

  {
    "id": "mongodb",
    "name": "MongoDB",
    "command": "npx",
    "args": ["-y", "mcp-server-mongodb"],
    "env": {
      "MONGODB_URI": "mongodb://localhost:27017/mydb"
    },
    "enabled": false
  },

  {
    "id": "redis",
    "name": "Redis",
    "command": "npx",
    "args": ["-y", "mcp-server-redis"],
    "env": {
      "REDIS_URL": "redis://localhost:6379"
    },
    "enabled": false
  },

  {
    "_comment": "=== PRODUCTIVITY TOOLS ===",
    "id": "google-drive",
    "name": "Google Drive",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-gdrive"],
    "env": {},
    "enabled": false
  },

  {
    "id": "slack",
    "name": "Slack",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-slack"],
    "env": {
      "SLACK_BOT_TOKEN": "xoxb-your-token-here",
      "SLACK_TEAM_ID": "your_team_id_here"
    },
    "enabled": false
  }
]
